package threading;

public class ThreadJoinExample1 {

	public void run() {
		for(int i = 0; i <= 5; i++) {
			try {
				Thread.sleep(500);
			} catch(Exception ex) {
				System.out.println(ex);
			}
			
		System.out.println(i);
		}
	}
	
	public static void main(String args[]) {
		ThreadJoinExample1 t1 = ThreadJoinExample1();
	}
	
}
